<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/name_titles_split"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/nave_split_item_type_padding">

    <ImageView
        android:id="@+id/split_menu_icon"
        android:layout_width="@dimen/nave_split_item_type_image_icon_layout_width"
        android:layout_height="@dimen/nave_split_item_type_image_icon_layout_height"

        android:icon="@mipmap/home"
        android:layout_gravity="center_vertical"

        android:layout_marginRight="@dimen/nave_split_item_type_image_icon_marginRight"
        android:layout_marginEnd="@dimen/nave_split_item_type_image_icon_marginRight"

        android:adjustViewBounds="true"
        android:contentDescription="@string/not_available" />

    <TextView
        android:id="@+id/split_menu_item_type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:padding="@dimen/nave_split_item_type_name_padding"

        android:text="@string/home"
        android:textColor="@color/white"
        android:textSize="@dimen/nave_split_item_type_name_textSize"
        android:typeface="normal"

        tools:ignore="RtlHardcoded" />

</LinearLayout>