<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nave_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@mipmap/bell_white_small"
            android:contentDescription="@string/not_available"/>

        <TextView
            android:id="@+id/notification_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="0"
            android:textStyle="bold"
            android:textSize="@dimen/header_name_textSize"
            android:textColor="@color/white"/>

    </LinearLayout>


    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/header_image_layout_width"
        android:layout_height="@dimen/header_image_layout_height"

        android:layout_marginTop="30dp"

        android:layout_marginLeft="@dimen/header_image_layout_marginLeft"
        android:layout_marginStart="@dimen/header_image_layout_marginLeft"
        android:layout_marginRight="@dimen/header_image_layout_marginRight"
        android:layout_marginEnd="@dimen/header_image_layout_marginRight"

        android:src="@mipmap/account_circle_white"
        android:contentDescription="@string/not_available"/>


    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:layout_centerVertical="true"

        android:text="@string/welcome"
        android:textStyle="bold"
        android:textSize="@dimen/header_name_textSize"
        android:textColor="@color/white"

        android:layout_toRightOf="@+id/image_profile"
        android:layout_toEndOf="@+id/image_profile" />

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/image_profile"
        android:layout_marginLeft="@dimen/header_image_layout_marginLeft"
        android:layout_marginStart="@dimen/header_image_layout_marginLeft"
        android:text="Frederick_Kiffen@hotmail.com"
        android:textSize="16sp"
        android:textColor="@color/white"
    />

</RelativeLayout>