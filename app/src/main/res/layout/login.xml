<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.codingdojoangola.welcome.Login">


    <!-- ****************************** LAYOUT IMAGE ************************************* -->
    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/image_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"

        android:layout_marginTop="30dp"
        android:src="@drawable/user_default_welcome"

        app:sriv_border_color="@color/colorLogo"
        app:sriv_border_width="2dp"
        app:sriv_oval="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- ****************************** LAYOUT USE DATA ********************************** -->
    <LinearLayout
        android:id="@+id/user_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_logo"
        android:orientation="vertical">

        <!--********************** EMAIL ******************** -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/design_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_logo"
            android:layout_marginTop="30dp">

            <AutoCompleteTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/prompt_username"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </android.support.design.widget.TextInputLayout>

        <!--********************** PASSWORD ******************** -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/design_email">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/prompt_password"

                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_marginTop="10dp"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <!--********************** SIGN IN ******************** -->
    <Button
        android:id="@+id/sign_in_button"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:text="@string/action_sign_in"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/Red"

        android:layout_marginTop="30dp"
        android:layout_below="@+id/user_data" />

    <!-- ***************************** LOGIN PROGRESS ********************************* -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"

        android:layout_marginTop="20dp"
        android:layout_below="@+id/user_data"
        android:visibility="invisible" />

    <!-- ***************************** NOT A MEMBER ********************************* -->
    <LinearLayout
        android:id="@+id/not_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/user_data"

        android:layout_marginTop="110dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_member"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/split_shades"/>

        <LinearLayout
            android:id="@+id/sign_up_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:clickable="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up_now"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/Red"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@mipmap/arrow_frent_small"
                android:layout_gravity="center"
                android:contentDescription="@string/not_available"/>
        </LinearLayout>
    </LinearLayout>

    <!-- *************************************************************************************** -->

</RelativeLayout>
